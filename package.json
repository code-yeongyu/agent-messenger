{
  "name": "agent-messenger",
  "version": "1.0.0",
  "description": "Multi-platform messaging CLI for AI agents (Slack, Discord, Teams)",
  "type": "module",
  "module": "dist/cli.js",
  "main": "dist/cli.js",
  "bin": {
    "agent-messenger": "./src/cli.ts",
    "amsg": "./src/cli.ts",
    "agent-slack": "./src/platforms/slack/cli.ts",
    "agent-discord": "./src/platforms/discord/cli.ts",
    "agent-teams": "./src/platforms/teams/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "bun scripts/postbuild.ts",
    "test": "bun test src/",
    "test:e2e": "bun test e2e/",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "dev": "bun --hot ./dist/cli.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@slack/web-api": "^6.9.0",
    "commander": "^11.1.0",
    "zod": "^3.22.4",
    "classic-level": "^1.3.0",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/better-sqlite3": "^7.6.8",
    "@types/bun": "latest",
    "@types/node": "^20.10.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
